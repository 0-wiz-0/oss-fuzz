# Test fuzzers

compile

DIR="/out"
N=0
for FUZZER in $(find $DIR -executable -type f); do
  echo "testing $FUZZER"
  $FUZZER -runs=32
  N=$[$N+1]
done

if [ "$N" -eq "0" ]; then
  echo "ERROR: no fuzzers found in $DIR"
  ls -al /out
  exit 1
fi

echo "$N fuzzers total"

